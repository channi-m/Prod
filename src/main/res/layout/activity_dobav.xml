<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DobavActivity"
    android:background="#E2F4ED">

    <Button
        android:id="@+id/button"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#66C6BA"
        android:text="отмена" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:text="Выбрать блюда"
        android:backgroundTint="#389490"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:text="Выбрать продукты"
        android:layout_marginVertical="1dp"
        android:backgroundTint="#389490"/>


    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:ems="9"
        android:hint="Введите время приёма пищи"
        android:inputType="time"
        android:textSize="15sp"
        android:textColorHint="#649DAD"
        android:layout_marginVertical="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dobavList"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:text="Ok"
        android:backgroundTint="#66C6BA"/>

</LinearLayout>